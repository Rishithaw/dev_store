<h1>Checkout</h1>

<% if @cart_items.empty? %>
  <p>Your cart is empty.</p>
  <%= link_to "Browse Products", products_path, class: "btn btn-primary" %>
<% else %>

  <h2>Order Summary</h2>

  <table class="table">
    <thead>
      <tr>
        <th>Product</th>
        <th>Price</th>
        <th>Quantity</th>
        <th>Total</th>
      </tr>
    </thead>

    <tbody>
      <% @cart_items.each do |product| %>
        <tr>
          <td><%= product.name %></td>
          <td>$<%= product.price %></td>
          <td><%= session[:cart][product.id.to_s] %></td>
          <td>$<%= product.price * session[:cart][product.id.to_s] %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <h3>
    Subtotal:
    $<%= @cart_items.sum { |p| p.price * session[:cart][p.id.to_s] } %>
  </h3>

  <br>

  <%= link_to "Proceed to Address", address_checkout_path,
              class: "btn btn-primary btn-lg" %>

  <%= link_to "Continue Shopping", products_path %>
<% end %>
