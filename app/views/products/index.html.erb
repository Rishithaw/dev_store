<h1>Products</h1>

<h2 class="my-4">Search Products</h2>

<div style="text-align: right; margin-bottom: 20px;">
  <%= render "shared/auth_links" %>
  <%= render "shared/breadcrumbs" %>

</div>

<%= render "products/search_form" %>

<h3>Filters</h3>

<div style="margin-bottom: 20px;">
  <%= link_to "All Products", products_path, class: "btn btn-secondary" %>
  <%= link_to "On Sale", products_path(filter: "on_sale"), class: "btn btn-primary" %>
  <%= link_to "New (Last 3 Days)", products_path(filter: "new"), class: "btn btn-primary" %>
  <%= link_to "Recently Updated", products_path(filter: "recently_updated"), class: "btn btn-primary" %>
</div>

<hr>

<% if @products.any? %>

  <div style="display: grid; grid-template-columns: repeat(auto-fill, minmax(220px, 1fr)); gap: 30px;">
    <%= render partial: "product_card", collection: @products, as: :product %>
  </div>

  <div class="pagination mt-4">
    <%= paginate @products %>
  </div>

<% else %>
  <p>No products found.</p>
<% end %>
