<h1>Products</h1>

<h2 class="my-4">Search Products</h2>

<div style="text-align: right; margin-bottom: 20px;">
  <%= render "shared/auth_links" %>
</div>

<%= render "products/search_form" %>

<hr>

<% if @products.any? %>

  <div style="display: grid; grid-template-columns: repeat(auto-fill, minmax(220px, 1fr)); gap: 30px;">
    <%= render partial: "product_card", collection: @products, as: :product %>
  </div>

  <div class="pagination mt-4">
    <%= paginate @products %>
  </div>

<% else %>
  <p>No products found.</p>
<% end %>
