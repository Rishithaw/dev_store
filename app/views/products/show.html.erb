<h1><%= @product.name %></h1>

<div style="text-align: right; margin-bottom: 10px;">
  <%= render "shared/auth_links" %>
  <%= render "shared/breadcrumbs" %>

</div>

<div style="max-width: 400px;">
  <% if @product.image_url.present? %>
    <img src="<%= @product.image_url %>" alt="<%= @product.name %>" style="width: 100%; border-radius: 8px;">
  <% else %>
    <p><em>No image available.</em></p>
  <% end %>
</div>

<p><strong>Description:</strong> <%= @product.description %></p>

<p>
  <strong>Category:</strong>
  <%= @product.category.present? ? @product.category.name : "Uncategorized" %>
</p>

<p>
  <strong>Price:</strong>
  $<%= @product.price %>
  <% if @product.on_sale? %>
    <span style="color: red; font-weight: bold;">(On Sale!)</span>
  <% end %>
</p>

<hr>

<%= button_to "Add to Cart",
              cart_add_path(@product.id),
              method: :post,
              class: "btn btn-primary" %>

<br>

<%= link_to "Back to Products", products_path %>
