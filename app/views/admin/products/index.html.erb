<h1>Products (Admin)</h1>

<div style="margin-bottom: 15px;">
  <%= link_to "View Public Store", products_path, class: "btn btn-primary" %>
</div>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Category</th>
      <th>Price</th>
      <th>Image</th>
      <th>Type</th>
      <th>Stock</th>
      <th>Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.name %></td>
        <td><%= product.category&.name %></td>
        <td>$<%= product.base_price %></td>

        <td>
          <% if product.image.attached? %>
            <%= image_tag product.image.variant(resize_to_limit: [80, 80]) %>
          <% else %>
            No Image
          <% end %>
        </td>

        <td><%= product.product_type %></td>
        <td><%= product.stock_quantity %></td>

        <td>
          <%= link_to "View", admin_product_path(product) %> |
          <%= link_to "Edit", edit_admin_product_path(product) %> |
          <%= link_to "Delete", admin_product_path(product),
                method: :delete,
                data: { confirm: "Are you sure?" } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<%= link_to "Create New Product", new_admin_product_path %>
